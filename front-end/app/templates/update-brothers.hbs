<h2 class="row">
	<div class="col-xs-10">
		Update Brother list 
	</div>
	<div class="col-xs-2 text-right">
		{{#unless adding}}
		<a class="btn" {{action 'add'}} aria-label="Add">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			Add a brother
		</a>
		{{/unless}}
	</div>
</h2>

{{#if adding}}
<div class="panel panel-success">
	<div class="panel-heading">
		<h3 class="panel-title row">
			<div class="col-xs-10">
				<a class="btn"> {{name}}</a>
			</div>
			<div class="col-xs-2 text-right">
				<a class="btn" {{action 'saveAdd'}} aria-label="Save">
					<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
				</a>
				<a class="btn" {{action 'closeAdd'}} aria-label="Cancel">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
				</a>
			</div>
		</h3>
	</div>
	<ul class="list-group">
		<li class="list-group-item">
			<strong>First Name:</strong> 
			{{input type="text" class="form-control" value=firstName}}
		</li>
		<li class="list-group-item">
			<strong>Last Name:</strong> 
			{{input type="text" class="form-control" value=lastName}}
		</li>
		<li class="list-group-item">
			<strong>Year:</strong> 
			{{input type="text" class="form-control" value=year}}
		</li>
		<li class="list-group-item">
			<strong>Question:</strong>
			{{input type="text" class="form-control" value=question}}
		</li>
		<li class="list-group-item">
			<strong>Answer:</strong>
			{{input type="text" class="form-control" value=answer}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 1:</strong>
			{{input type="text" class="form-control" value=falseAnswer1}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 2:</strong>
			{{input type="text" class="form-control" value=falseAnswer2}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 3:</strong>
			{{input type="text" class="form-control" value=falseAnswer3}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 4:</strong>
			{{input type="text" class="form-control" value=falseAnswer4}}
		</li>
	</ul>
</div>
{{/if}}

{{#each brother in model}}
<div class="panel panel-success">
	<div class="panel-heading">
		<h3 class="panel-title row">
			<div class="col-xs-10">
				<a href=".{{brother.id}}" class="btn" data-toggle="collapse" {{action 'show' brother.id}} aria-expanded="false" aria-controls={{brother.id}}>
					{{brother.name}} <span class="wow" id={{brother.id}}><span class="caret"></span></span>
				</a>
			</div>
			<div class="col-xs-2">
				<div class="text-right hide controls" id={{brother.id}}>
					{{#if brother.isEditing}}
					<a class="btn" {{action 'save' brother.id}} aria-label="Save">
						<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
					</a>
					{{/if}}
					<a class="btn" {{action 'edit' brother.id brother.isEditing}} aria-label="Edit"> 
						{{#if brother.isEditing}}
						<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
						{{else}}
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
						{{/if}}
					</a>
				</div>
			</div>
		</h3>
	</div>
	<ul class="list-group collapse {{brother.id}}">
		<li class="list-group-item">
			<strong>First Name:</strong> 
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.firstName}}
			{{else}}
			{{brother.firstName}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Last Name:</strong> 
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.lastName}}
			{{else}}
			{{brother.lastName}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Year:</strong> 
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.year}}
			{{else}}
			{{brother.year}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Question:</strong>
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.question}}
			{{else}}
			{{brother.question}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Answer:</strong>
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.answer}}
			{{else}}
			{{brother.answer}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 1:</strong>
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.falseAnswer1}}
			{{else}}
			{{brother.falseAnswer1}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 2:</strong>
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.falseAnswer2}}
			{{else}}
			{{brother.falseAnswer2}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 3:</strong>
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.falseAnswer3}}
			{{else}}
			{{brother.falseAnswer3}}
			{{/if}}
		</li>
		<li class="list-group-item">
			<strong>Wrong answer 4:</strong>
			{{#if brother.isEditing}}
			{{input type="text" class="form-control" value=brother.falseAnswer4}}
			{{else}}
			{{brother.falseAnswer4}}
			{{/if}}
		</li>
		{{#if brother.isEditing}}
		<li class="list-group-item">
			<button type="button" class="btn btn-danger" {{action 'delete' brother.id}}>Delete {{brother.name}}</button>
		</li>
		{{/if}}
	</ul>
</div>
{{/each}}
{{outlet}}
