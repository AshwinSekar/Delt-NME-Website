<h2>Update Pledge list</h2>

{{#each pledge in model}}
{{#unless pledge.isMaster}}
<div class="panel panel-info">
	<div class="panel-heading">
		<h3 class="panel-title row">
			<div class="col-xs-10">
				<a href=".{{pledge.id}}" class="btn" data-toggle="collapse" {{action 'show' pledge.id}} aria-expanded="false" aria-controls={{pledge.id}}>
					{{pledge.name}}
				</a>
				<span class="badge">{{pledge.numberInterviewsDone}} brothers interviewed</span>
			</div>
			<div class="col-xs-2 text-right">
				<a class="btn hide" {{action 'edit' pledge.id}} id={{pledge.id}} aria-label="Edit"> 
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				</a>
			</div>
		</h3>
	</div>
	<ul class="list-group collapse {{pledge.id}}">
		<li class="list-group-item"><strong>First Name:</strong> {{pledge.firstName}}</li>
		<li class="list-group-item"><strong>Last Name:</strong> {{pledge.lastName}}</li>
		<li class="list-group-item"><strong>Email:</strong> {{pledge.email}}</li>
	</ul>
</div>
{{/unless}}
{{/each}}
{{outlet}}
