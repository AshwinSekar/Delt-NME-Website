<h2>Update Profile</h2>

<div class="panel panel-info">
	<div class="panel-heading">
		<h3 class="panel-title">{{model.name}} <span class="badge">{{model.numberInterviewsDone}} brothers interviewed</span></h3>
	</div>
	<div class="panel-body">
		<form role="form">
			<div class ="form-group">
				<label for="email" class="control-label">Change Email:</label>
                {{input type="text" placeholder=model.email class="form-control" value=email}}
            </div>
            <div class="form-group">
            	<label for="password" class="control-label">Change Password:</label>
            	{{input type="password" id="password" placeholder="Password" class="form-control" value=password}} 
            </div>
            <div {{bind-attr class=":form-group :has-feedback confirmSuccess:has-success confirmFail:has-error"}}>
            	<label for="confirm" class="control-label">Confirm Password:</label>
            	{{input type="password" id="confirm" placeholder="Password" class="form-control" value=confirm}}
            	{{#if confirmSuccess}}
            		<span class="glyphicon glyphicon-ok form-control-feedback"></span>
            	{{/if}}
            	{{#if confirmFail}}
            		<span class="glyphicon glyphicon-remove form-control-feedback"></span>
            	{{/if}}
            </div>
            <button type="submit" class="btn btn-info" {{action 'update'}}>Update</button>
        </form>
	</div>
</div>

{{outlet}}
