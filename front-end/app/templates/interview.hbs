<h2>Interview Brothers</h2>

<div role="tabpanel">
	<!-- Nav tabs --> 
	<ul class="nav nav-tabs" role="tablist">
		<li role="presentation" class="active">
			<a href="#incomplete" aria-controls="incomplete" role="tab" data-toggle="tab">
				Pending Interviews
				<span class="badge">{{numPending}}</span>
			</a>
		</li>
		<li role="presentation">
			<a href="#complete" aria-controls="complete" role="tab" data-toggle="tab">
				Completed Interviews
				<span class="badge">{{model.numberInterviewsDone}}</span>
			</a>
		</li>
		<li role="presentation">
			<a href="#failed" aria-controls="failed" role="tab" data-toggle="tab">
				Failed Interviews
				<span class="badge">{{model.numberInterviewsFailed}}</span>
			</a>
		</li>
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">

		<div role="tabpanel" class="tab-pane fade in active" id="incomplete">
			<h2>Pending Interviews</h2>
			<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
				{{#each brother in brothersPending}}
				<div class="panel panel-primary">
					<div class="panel-heading" role="tab" id="heading{{brother.id}}">
						<h3 class="panel-title">
							<a data-toggle="collapse" data-parent="#accordion" href="#collapse{{brother.id}}" aria-expand="false" aria-controls="collapse{{brother.id}}">
								{{brother.name}}
							</a>
						</h3>
					</div>
					<div id="collapse{{brother.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{brother.id}}">
						<div class="panel-body">
							<form class="form-horizontal">
								<div class="form-group">
									<label for="year" class="col-sm-2 control-label">Year:</label>
									<div class="col-sm-10">
										<select class="form-control" id="year{{brother.id}}">
											<option value="Freshmen">Freshmen</option>
											<option value="Sophomore">Sophomore</option>
											<option value="Junior">Junior</option>
											<option value="Senior">Senior</option>
											<option value="5th Year">5th Year</option>
											<option value="Masters">Masters</option>
										</select>
									</div>
								</div>
								<div class="form-group">
									<label for="answer" class="col-sm-2 control-label">{{brother.question}}</label>
									<div class="col-sm-10">
										<select class="form-control" id="answer{{brother.id}}">
											<option value="{{brother.falseAnswer1}}">{{brother.falseAnswer1}}</option>
											<option value="{{brother.falseAnswer2}}">{{brother.falseAnswer2}}</option>
											<option value="{{brother.falseAnswer3}}">{{brother.falseAnswer3}}</option>
											<option value="{{brother.falseAnswer4}}">{{brother.falseAnswer4}}</option>
											<option value="{{brother.answer}}">{{brother.answer}}</option>
										</select>
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<button type="submit" class="btn btn-default" {{action 'interview' brother.id}}>Verify Interview</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>

		<div role="tabpanel" class="tab-pane fade" id="complete">
			<h2>Completed Interviews</h2>
			<div class="list-group">
				{{#each brother in model.brothersInterviewed}}
				<a class="list-group-item">{{brother.name}}</a>
				{{/each}}
			</div>
		</div>

		<div role="tabpanel" class="tab-pane fade" id="failed">
			<h2>Failed Interviews</h2>
			<div class="list-group">
				{{#each brother in model.brothersFailed}}
				<a class="list-group-item">{{brother.name}}</a>
				{{/each}}
			</div>
		</div>

	</div>
</div>



{{outlet}}
